<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rief"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="32" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@drawable/buku_clipart_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/buku_clipart_logo"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.AplikasiSederhana" >
        <activity
            android:name="com.rief.view.DetailActivity"
            android:exported="false" />
        <activity
            android:name="com.rief.view.ListDataDetailActivity"
            android:exported="false" />
        <activity
            android:name="com.rief.view.ListDataActivity"
            android:exported="false" />
        <activity
            android:name="com.rief.view.AboutActivity"
            android:exported="false" />
        <activity
            android:name="com.rief.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.rief.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.rief.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>